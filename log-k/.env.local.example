# Local Development Environment Variables
# Copy this to .env.local and fill in your values

# ====================
# SUPABASE (Required)
# ====================
NEXT_PUBLIC_SUPABASE_URL=https://dqzqzbkgxboklbdsdmvf.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Admin Access - Service Role Key (NEVER expose to client!)
# This key bypasses Row Level Security - use with extreme caution
# Get this from Supabase Dashboard > Settings > API > service_role
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ====================
# STRIPE (Test Mode)
# ====================
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_test_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here

# After creating webhook endpoint at https://dashboard.stripe.com/test/webhooks
# Endpoint URL: https://your-domain.com/api/subscription/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# After creating products in Stripe Dashboard
# Basic Plan: €19.99/year
# Pro Plan: €49.99/year  
STRIPE_BASIC_PRICE_ID=price_your_test_basic_price_id
STRIPE_PRO_PRICE_ID=price_your_test_pro_price_id

# ====================
# OPTIONAL
# ====================
# Mapbox for flight planning maps
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# Debug mode
NEXT_PUBLIC_DEBUG_MODE=true

# Node Environment
NODE_ENV=development